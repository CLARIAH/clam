$def with (system_id,system_name,project, url, statuscode,statusmessage, errors, errormsg, parameterdata, corpora, outputpaths, inputpaths,outputformats, inputformats)
<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="$url/static/interface.xsl"?>
<clam id="$system_id" name="$system_name" project="$project">
    <status code="$statuscode" message="$statusmessage" errors="$errors" errormsg="$errormsg" />
     $if statuscode == 0 or statuscode == 2:
        <parameters>
            $for group, parameters in parameterdata:
                <parametergroup name="$group">
                    $for parameter in parameters:
                        $:parameter.xml()
                </parametergroup>
        </parameters>
     $if statuscode == 0:
        <corpora>
            $for corpus in corpora:
                <corpus>$corpus</corpus>
        </corpora> 
        <inputformats>
            $for format in inputformats:
                $:format.xml()
        </inputformats>
        <input>
            $for path, format, encoding in inputpaths:
                <path format="$format" encoding="$encoding">$path</path>
        </input>
     $if statuscode == 2:
        <outputformats>
            $for format in outputformats:
                $:format.xml()
        </outputformats>
        <output>
            $for path, format, encoding in outputpaths:
                <path format="$format" encoding="$encoding">$path</path>
        </output>
</clam>

